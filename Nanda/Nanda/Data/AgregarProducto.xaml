<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nanda.Data.AgregarProducto">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="name" Placeholder="Nombre"/>
            <Entry x:Name="brand" Placeholder="Marca"/>
            <Entry x:Name="description" Placeholder="Descripcion"/>
            <Entry x:Name="price" Placeholder="Precio"/>
            <Entry x:Name="categorie" Placeholder="Categoria"/>
            <Entry x:Name="image" Placeholder="Imagen"/>

            <Button x:Name="btn" Text="Insertar"/>

            <Label x:Name="mensaje" Text=""/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>