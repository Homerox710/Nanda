<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nanda.Data.AgregarProducto">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="name" Text="Nombre"/>
            <Entry x:Name="brand" Text="Marca"/>
            <Entry x:Name="description" Text="Descripcion"/>
            <Entry x:Name="price" Text="Precio"/>
            <Entry x:Name="categorie" Text="Categoria"/>
            <Entry x:Name="image" Text="Categoria"/>

            <Button x:Name="btn" Text="Insertar"/>

            <Label x:Name="mensaje" Text=""/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>