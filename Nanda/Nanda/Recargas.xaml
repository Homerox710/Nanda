<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nanda.Recargas">
    <ContentPage.Content>
        <Grid>
            <Image Source="fondo.jpg" Aspect="AspectFill"/>
            <ScrollView>
                <StackLayout>
                    <Label Grid.Row="1" WidthRequest="100"
                       HeightRequest="100" Margin="0,50,0,30"/>
                    <StackLayout Grid.Row="1" Padding="10,20">
                        <Label Text="Recargue su tarjeta!" TextColor="White" FontFamily="{StaticResource Roboto}" FontSize="Title" HorizontalTextAlignment="Center"/>
                        <Label TextColor="#ffffff" FontFamily="{StaticResource Roboto}" x:Name="txtTarjetaBanco"/>
                        <Button Text="Recargar" BackgroundColor="#28104E"  TextColor="#FDEPCC"  FontAttributes="Bold"
                        BorderRadius="20" x:Name="btnRecargar" FontFamily="{StaticResource Code}" Margin="0,0,0,20"/>
                        <Entry x:Name="entryRecarga"/>
                        <Label x:Name="StatusMessage" FontSize="Medium" TextColor="White"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>