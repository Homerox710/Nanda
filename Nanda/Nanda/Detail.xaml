<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nanda.Detail"
              xmlns:controls="clr-namespace:Xamd.ImageCarousel.Forms.Plugin.Abstractions;assembly=Xamd.ImageCarousel.Forms.Plugin.Abstractions">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <controls:ImageCarousel x:Name="imgSlider" HeightRequest="250"/>
                <ImageButton Source="celuMain.png" BackgroundColor="White" x:Name="btncSamsung"/>
                <ImageButton Source="tabletMain.png" BackgroundColor="White" x:Name="btncCaterpillar"/>
                <ImageButton Source="audioMain.jpg" BackgroundColor="White" x:Name="btncTablets"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>